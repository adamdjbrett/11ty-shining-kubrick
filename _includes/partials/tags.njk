{% if metadata.widget.show_tags %}
<div class="p-3 p-md-4 bg-light rounded mt-2 mb-3">
<h3 class="mb-3">
{{metadata.widget.tags }}
</h3>
{% for tag in collections | getKeys | filterTagList %}{% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
<a href="/tags/{{ tag | slugify }}" class="btn btn-outline-dark btn-sm mt-1 mb-1 me-1">{{tag}}</a>
{%- endfor %}
</div>
{% endif %}
