---
layout: base.njk
---
<div class="col-md-8 p-3">
<heading-anchors>
{{ content | safe }}
{% for post in pagination.items %}
<div class="text-center mb-5">
{% if post.data.image %}<a href="{{post.url}}"><img class="img-fluid mb-5 blog_img_article rounded" alt="{{post.data.title}}" width="100%" height="100%" src="{{post.data.image or metadata.image}}"/></a>{% endif %}
<p class="lead text-secondary info"><strong>
{{post.data.category or metadata.widget.category}}
</strong></p>
<h3 class="mb-5 article_title"><strong><a href="{{post.url}}">
{{post.data.title}}
</a></strong></h3>
<p class="text-start read_more">
{{ post.data.description }}
</p>
<p class="text-start text-secondary"><small>
<span class="ms-3 more_info"><a href="{{post.url}}"><i class="fas fa-arrow-right me-3 bg-dark rounded-circle text-white p-1"></i>Read More</a></span>
<span class="ms-3">|</span>
<span class="ms-3"><time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time></span>
<span class="ms-3">|</span>
<span class="ms-3"><a href="{{metadata.author.url}}">{{metadata.author.name}}</a></span>
</small>
</p>
</div>
</heading-anchors>
{% endfor %}

<div class="row mt-5">
<div class="col-6">
{% if pagination.href.previous %}<a href="{{ pagination.href.previous }}" class="btn btn-dark p-2">
<i class="fa-solid fa-arrow-left me-3"></i> Previous
</a>{% endif %}
</div>
<div class="col-6 text-end">
{% if pagination.href.next %}<a href="{{ pagination.href.next }}" class="btn btn-dark p-2">
Next <i class="fa-solid fa-arrow-right ms-3"></i>
</a>{% endif %}
</div>
</div>
</div>

